{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/favicon.png",
      "dest": "/static/favicon.png",
      "headers": { "cache-control": "public, max-age=86400" }
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public, max-age=86400" }
    },
    {
      "src": "/(.*)",
      "dest": "api/vercel.py"
    }
  ]
}
