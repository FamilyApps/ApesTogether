{
  "version": 2,
  "name": "stock-portfolio-app",
  "builds": [
    {
      "src": "api/vercel.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/.well-known/apple-app-site-association",
      "dest": "/public/.well-known/apple-app-site-association",
      "headers": {
        "Content-Type": "application/json"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/vercel.py"
    }
  ],
  "crons": [
    {
      "path": "/api/health",
      "schedule": "*/4 * * * *"
    },
    {
      "path": "/api/cron/collect-intraday-data",
      "schedule": "*/15 * * * 1-5"
    },
    {
      "path": "/api/cron/market-close", 
      "schedule": "5 21 * * 1-5"
    },
    {
      "path": "/api/cron/cleanup-intraday-data",
      "schedule": "0 6 * * 0"
    }
  ]
}
