{
  "version": 2,
  "name": "stock-portfolio-app",
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/health",
      "schedule": "*/4 * * * *"
    },
    {
      "path": "/api/cron/collect-intraday-data",
      "schedule": "*/15 * * * 1-5"
    },
    {
      "path": "/api/cron/market-close", 
      "schedule": "5 21 * * 1-5"
    },
    {
      "path": "/api/cron/cleanup-intraday-data",
      "schedule": "0 6 * * 0"
    }
  ]
}
