{
  "version": 2,
  "name": "stock-portfolio-app",
  "functions": {
    "api/vercel.py": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/vercel.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/market-open",
      "schedule": "30 14 * * 1-5"
    },
    {
      "path": "/api/cron/collect-intraday-data",
      "schedule": "30,45 14 * * 1-5"
    },
    {
      "path": "/api/cron/collect-intraday-data",
      "schedule": "0,15,30,45 15-20 * * 1-5"
    },
    {
      "path": "/api/cron/collect-intraday-data",
      "schedule": "0 21 * * 1-5"
    },
    {
      "path": "/api/cron/market-close", 
      "schedule": "2 21 * * 1-5"
    },
    {
      "path": "/api/cron/cleanup-intraday-data",
      "schedule": "0 6 * * 0"
    }
  ]
}
